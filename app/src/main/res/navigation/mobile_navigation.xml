<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/productListFragment">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="fr.ensisa.rados.kfet.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="fr.ensisa.rados.kfet.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/productFragment"
        android:name="fr.ensisa.rados.kfet.ui.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/product_fragment">
    <argument
        android:name="id"
        app:argType="long"
        android:defaultValue="0L" />
    </fragment>
    <fragment
        android:id="@+id/productListFragment"
        android:name="fr.ensisa.rados.kfet.ui.ProductListFragment"
        android:label="fragment_product_list"
        tools:layout="@layout/product_list_fragment" >
        <action
            android:id="@+id/action_productListFragment_to_productFragment"
            app:destination="@id/productFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>